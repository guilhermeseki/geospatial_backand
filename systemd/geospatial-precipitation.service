[Unit]
Description=Precipitation Data Daily Update (CHIRPS + MERGE)
After=network.target

[Service]
Type=oneshot
User=guilherme
WorkingDirectory=/opt/geospatial_backend
ExecStart=/home/guilherme/miniconda3/envs/horus/bin/python app/run_precipitation_daily.py
StandardOutput=append:/opt/geospatial_backend/logs/precipitation-daily.log
StandardError=append:/opt/geospatial_backend/logs/precipitation-daily.log

[Install]
WantedBy=multi-user.target
